pale_lilac  = #F5EFFF
light_lilac = #C8A2C8
dark_lilac  = #86608E
dark_grey   = #222
medium_grey = #777
light_grey  = #DDD

*
  box-sizing border-box
html, body
  margin 0
  padding 0
  background pale_lilac

html
  font-family 'Alice', serif
  color: dark_grey
h1, h2, h3, h4, h5, h6, nav
  font-family 'Playfair Display', serif
blockquote, pre
  padding 1em
  margin 1em 0
  border-left 0.5em solid dark_lilac
  background light_grey
  & *:first-child
    margin-top 0
  & *:last-child
    margin-bottom 0

#main_menu_container
  position fixed
  top 0
  left 0
  bottom 0
  right 0
#main_menu
  height 100%
  padding 0
  max-width 48em
  width 100%
  margin 0 auto
  position relative
  z-index 1
  a
    text-decoration none
    color dark_grey
  ul
    margin 0
    padding 0
    list-style-type none
    li
      margin 0
      padding 0
      a
        display block
        padding 0.25em
        padding-left: 1.5em
        width 11em
        transition 0.25s
        &:before
          content "❧"
          opacity 0
          display inline-block
          position absolute
          margin-left -1em
          transition 0.25s
        &:hover:before
          opacity 1
  h1
    font-size 1.25em
    margin 0
    a
      display block
      width 8.8em
      padding 1em 0 0.5em 1.4em
      transition 0.25s
      &:before
          content "❧"
          opacity 0
          display inline-block
          position absolute
          margin-left -1em
          transition 0.25s
      &:hover:before
        opacity 1

#content_container
  max-width 48em
  margin 0 auto
  padding-left 12em
#content
  position relative
  z-index 1
  article
    text-align justify
    padding 1em 1em 0 1em
    &:last-child
      padding-bottom 1em
    h2
      margin 0
      a
        text-decoration none
        color dark_grey
        transition 0.25s
        &:before
          content "❧"
          opacity 0
          display inline-block
          position absolute
          margin-left -1em
          transition 0.25s
        &:hover:before
          opacity 1
    a
      color dark_lilac
