light_lilac = #C8A2C8
dark_lilac  = #86608E
dark_grey   = #222

*
  box-sizing border-box
html, body
  margin 0
  padding 0

html
  font-family 'Alice', serif
  color: dark_grey
h1, h2, h3, h4, h5, h6, nav
  font-family 'Playfair Display', serif

#main_menu
  background light_lilac
  position fixed
  top 0
  left 0
  width 12em
  height 100%
  padding 1em
  border-right 0.5em solid dark_lilac
  box-shadow 1px 0px 1px 0px rgba(0, 0, 0, 0.26)
  #logo
    img
      width 100%
      border-radius 100%
      transition 0.25s
    &:hover img
      filter sepia(75%)
  a
    text-decoration none
    color dark_grey
  ul
    margin 0
    padding 0
    list-style-type none
    li
      margin 0
      padding 0
      a
        display block
        padding 0.25em
        width 11em
        transition 0.25s
        &:before
          content "❧"
          opacity 0
          display inline-block
          position absolute
          margin-left -1em
          transition 0.25s
        &:hover
          background dark_lilac
          padding-left 1.5em
          &:before
            opacity 1
  h1
    font-size 1.25em
    margin 0
    a
      display block
      width 8.8em
      padding 0.5em 0
      transition 0.25s
      &:before
          content "❧"
          opacity 0
          display inline-block
          position absolute
          margin-left -1em
          transition 0.25s
      &:hover
        padding-left 1.4em
        &:before
          opacity 1


#content
  margin-left 12em
  padding 1em
  background url("../media/pswirls.jpg")
  article
    text-align justify
    max-width 36em
    padding 1em
    margin 0 auto 1em auto
    border-top 0.25em solid light_lilac
    background #DDD
    box-shadow 0px 1px 1px 0px rgba(0, 0, 0, 0.26)
    &:last-child
      margin-bottom 0
    h2
      margin 0
      a
        text-decoration none
        color dark_grey
        transition 0.25s
        &:before
          content "❧"
          opacity 0
          display inline-block
          position absolute
          margin-left -1em
          transition 0.25s
        &:hover
          padding-left 1em
          &:before
            opacity 1

