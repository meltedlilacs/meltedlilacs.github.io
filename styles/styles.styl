light_lilac = #C8A2C8
dark_lilac  = #86608E

*
  box-sizing border-box
html, body
  margin 0
  padding 0

html
  font-family 'Alice', serif
h1, h2, h3, h4, h5, h6, nav
  font-family 'Playfair Display', serif

#main_menu
  background light_lilac
  position fixed
  top 0
  left 0
  width 12em
  height 100%
  padding 1em
  border-right 0.5em solid dark_lilac
  #logo
    img
      width 100%
      border-radius 100%
      transition 0.25s
    &:hover img
      // border 0.5em solid dark_lilac
      filter sepia(75%)
  a
    text-decoration none
    color black
  ul
    margin 0
    padding 0
    list-style-type none
    li
      margin 0
      padding 0
      a
        display block
        padding 0.25em
        width 11em
        &:hover
          background dark_lilac
  h1
    font-size 1.25em

#content
  margin-left 12em
  padding 1em
  article
    padding 1em
    margin-bottom 1em
    border-top 0.25em solid light_lilac
    background #DDD
    h2
      margin 0
